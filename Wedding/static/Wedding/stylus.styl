// Page Banner
#banner
	font-size: 8em
	line-height: 0.96
	font-family: 'Italianno', Georgia, serif
	height: 1em
	text-align: center

	.banner-bar
		@media (min-width: highest-width)
			height: 0.64em
		@media (max-width: highest-width)
			height: 1.59em

	span
		position: relative
		top: -4px


// Page Navigation
nav
	text-align: center
	position: relative
	z-index: 10

	ul
		padding: 30px 0
		margin: -30px 0

		&:hover
			a.active
				&:before, &:after
					content: ''

	li
		display: inline
		margin: 0 2.3%

	a
		text-decoration: none
		color: purple
		font-family: 'Crush', Georgia, serif
		font-size: 2.2em
		line-height: 2

		.active
			&:hover:before
			&:before
				content: '['
			&:hover:after
			&:after
				content: ']'

		&:before,&:after
			position: absolute

		&:hover:before
			content: '['
		&:hover:after
			content: ']'

		span
			padding-left: 24px /* Handle offset for absolutely positioned pseudo elements */


// Content
.text
	width: 75%

.container
	margin-top: 75vh
	background: white url(/media/bg.png)
	height: 100%

	.float-container
		overflow: hidden
		margin-top: -2em

	article
		padding-bottom: 6em

		li
			font-family: 'Montserrat', Arial, sans-serif
			font-size: 1.3em
			line-height: 1.3em

	#intro
		max-width: 1260px
		margin: 0 auto
		padding-top: 40px /* gives sufficient clearance from banner to distinguish next section */


// Page Footer
.footer
		font-family: 'Crush', Georgia, serif
		font-size: 1.7em

	li a
		text-decoration: none

	a
		color: gray

	td:last-of-type
		padding: 10px


// COMMON ELEMENTS
body
	margin: 0
	overflow-x: hidden
	color: purple
	width: 100%
	height: 100%
	min-width: lowest-width
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale

h1
h2
	font-family: 'Italianno', Georgia, serif
	font-size: 6.5em
	font-weight: normal
	line-height: 1.7
	margin: 0

h2
	font-size: 4em
	line-height: 1

h3
	font-family: 'Montserrat', Arial, sans-serif
	font-size: 1.7em
	font-weight: bold
	line-height: 1
	margin: 0

p
	font-family: 'Montserrat', Arial, sans-serif
	font-size: 1.3em
	line-height: 1.3em

ul
	padding 1em
	list-style-type: none

a
	color: purple

table
	width: 100%
	height: 100%


// COMMON CLASSES
.clearfix:after
	visibility: hidden
	display: block
	font-size: 0
	content: " "
	clear: both
	height: 0

.align-left
	text-align: left

.align-right
	text-align: right

.align-center
	text-align: center

.float-left
	float: left

.float-right
	float: right

.bg-left
	background-position: 0

.bg-right
	background-position: 100%

.banner-bar
	width: 100%
	background: purple
	color: gray