// IMPORTS
@require fonts

// VARIABLES
lowest-width = 20em //320px
medium-width = 52.125em //834px
highest-width = 73.375em //1174px
white = #FFF
purple = #3B283D
gray = #B6BAB9

// GETTING INTO IT

// HEADER
header
	width: 100%
	overflow: hidden
	text-align: center

	#header-top
		position: fixed
		width: 100%
		z-index: -10
		background: white url(/media/bg.png)

		> div
			display: inline-block
			vertical-align: top
			margin-top: 15vh
			font-size: 4em
			font-family: 'Crush', Georgia, serif

		#wedding-date
			text-align: right
			margin-right: 20px

		#countdown
			text-align: left
			margin-left: 20px


// Main Portrait
#portrait
	display: inline-block
	height: 90vh
	background-size: cover
	background-position: center top

	@media (max-width: highest-width) and (min-width: medium-width)
		width: 320px
		background: url(/media/engagementMed.png) no-repeat

