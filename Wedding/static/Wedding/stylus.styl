// Page Banner
#banner
	font-size: 8em
	line-height: 0.96
	font-family: 'Italianno', Georgia, serif
	text-align: center

	.banner-bar
		@media (min-width: highest-width)
			height: 0.64em
		@media (max-width: highest-width - 0.001)
			height: 1.59em

	span
		position: relative
		top: -4px

	span.short
		max-width: 300px

		@media (max-width: low-med-width - 0.001)
			display: block



// Page Navigation
nav
	text-align: center
	position: relative
	z-index: 50

	ul
		margin: 0 auto

		@media (min-width: highest-width)
			width: highest-width

		@media (max-width: highest-width - 0.001) and (min-width: low-med-width)
			width: 500px

		&:hover a.active
			&:before, &:after
				content: ''
			&:hover:before
				content: '['
			&:hover:after
				content: ']'

	li
		margin: 0 2.2%

		@media (min-width: low-med-width)
			float: left

	a
		text-decoration: none
		color: purple
		font-family: 'Crush', Georgia, serif
		font-size: 2.2em
		line-height: 2
		display: block

		&.active
			&:before
				content: '['

			&:after
				content: ']'

		&:before,&:after
			position: absolute

		&:hover:before
			content: '['

		&:hover:after
			content: ']'

		span
			padding-left: 24px /* Handle offset for absolutely positioned pseudo elements */


// Content
.text
	@media (min-width: highest-width)
		width: 75%

	@media (max-width: highest-width - 0.001)
		width: 100%

.container
	background: white url(/media/bg.png)
	height: 100%

	.float-container
		overflow: hidden

		h1:not(.no-bg)
			white-space: nowrap

			@media (max-width: highest-width - 0.001)
				margin-bottom: 2.5em //30%

	article
		padding-bottom: 6em

		li
			font-family: 'Montserrat', Arial, sans-serif
			font-size: 1.3em
			line-height: 1.3em

	#intro
		max-width: 1260px
		margin: 0 auto


// Page Footer
.footer
	font-family: 'Crush', Georgia, serif
	font-size: 1.7em

	li a
		text-decoration: none

	a
		color: gray

	td:last-of-type
		padding: 10px


// COMMON ELEMENTS
body
	margin: 0
	overflow-x: hidden
	color: purple
	width: 100%
	height: 100%
	min-width: lowest-width
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale

h1
	font-family: 'Italianno', Georgia, serif
	font-size: 6.5em
	font-weight: normal
	line-height: 1.7
	margin: 0

h2
	font-family: 'Italianno', Georgia, serif
	font-size: 4em
	font-weight: normal
	line-height: 1
	margin: 0

h3
	font-family: 'Montserrat', Arial, sans-serif
	font-size: 1.7em
	font-weight: bold
	line-height: 1
	margin: 0

p
	font-family: 'Montserrat', Arial, sans-serif
	font-size: 1.3em
	line-height: 1.3em
	margin: 20px

ul
	padding 1em
	list-style-type: none

a
	color: purple

table
	width: 100%
	height: 100%

iframe
	@media (min-width: low-med-width)
		width: 640px
		height: 360px

	@media (max-width: low-med-width - 0.001)
		width: lowest-width
		height: (lowest-width / 2)


// COMMON CLASSES
.clearfix:after
	visibility: hidden
	display: block
	font-size: 0
	content: " "
	clear: both
	height: 0

.align-left
	text-align: left

.align-right
	@media (min-width: low-med-width)
		text-align: right

.align-center
	text-align: center

.float-left
	float: left

.float-right
	float: right

.bg-left
	background-position: 0

	@media (max-width: highest-width - 0.001)
		background-position: 50% 7em

.bg-right
	background-position: 100%

	@media (max-width: highest-width - 0.001)
		background-position: 50% 7em

.banner-bar
	width: 100%
	background: purple
	color: gray

span.short
	@media (min-width: low-med-width)
		display: none

	@media (max-width: low-med-width - 0.001)
		display: inline

span.long
	@media (min-width: low-med-width)
		display: inline

	@media (max-width: low-med-width - 0.001)
		display: none