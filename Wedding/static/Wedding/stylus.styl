// IMPORTS
@require fonts

// VARIABLES
lowest-width = 20em //320px
low-med-width = 39.688em //635px
medium-width = 53.125em //850px
highest-width = 73.375em //1174px
white = #FFF
purple = #3B283D
gray = #B6BAB9

// GETTING INTO IT

// HEADER
header
	width: 100%
	overflow: hidden

	@media (min-width: medium-width)
		text-align: center
		height: 75vh

	@media (max-width: medium-width - 0.001)
		text-align: left
		height: 65vh

	> section
		position: fixed
		width: 100%
		z-index: -10
		background: white url(/media/bg.png)
		min-width: lowest-width
		height: 100%

		> div
			vertical-align: top
			font-family: 'Crush', Georgia, serif

			@media (min-width: medium-width)
				display: inline-block
				margin-top: 15vh
				font-size: 4em

			@media (max-width: medium-width - 0.001)
				margin-top: 40px
				font-size: 3em
				font-weight: bold
				float: left


		#wedding-date
			@media (min-width: highest-width)
				margin-right: 20px
				text-align: right

			@media (min-width: medium-width) and (max-width: highest-width - 0.001)
				text-align: right

			@media (max-width: low-med-width - 0.001)
				color: gray
				margin-top: 0
				position: absolute;


		#countdown
			@media (min-width: highest-width)
				margin-left: 20px
				text-align: left

			@media (min-width: medium-width) and (max-width: highest-width - 0.001)
				text-align: left

			@media (max-width: medium-width - 0.001) and (min-width: low-med-width)
				clear: left;

			@media (max-width: low-med-width - 0.001)
				display: none


// Main Portrait
#portrait
	height: 90vh

	@media (min-width: highest-width)
		width: 640px
		background: url(/media/engagementLarge.png) no-repeat center top / cover

	@media (max-width: highest-width - 0.001) and (min-width: medium-width)
		width: 40%
		background: url(/media/engagementLarge.png) no-repeat center top / cover

	@media (min-width: medium-width)
		display: inline-block

	@media (max-width: medium-width - 0.001)
		display: none

#portrait-narrow
	@media (min-width: medium-width)
		display: none

	@media (max-width: medium-width - 0.001) and (min-width: low-med-width)
		width: 400px
		height: 90vh
		background: url(/media/engagementMed.png) no-repeat center top
		float: right

	@media (max-width: low-med-width - 0.001)
		width: 100%
		height: 90vh
		background: url(/media/engagementMed.png) no-repeat -60px top
		float: right


